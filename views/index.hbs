<div class="container">
    <h1 style="text-align: center">Eat Burgers</h1>
        <div class="container" style="text-align: center">
    </div>
    <form action="/burgers" method="POST">
  <div class="form-group" style="text-align: center">
    {{!-- <label for="burger">Burger</label> --}}
    <input type="text" class="form-control" id="addBurger" name="burger_name" placeholder="Enter the burger you would like to make">
    <input type="hidden" name="devoured" value="0">
      <button type="submit" class="btn btn-primary">Make</button>
  </div>
</form>
    <div class="row" style="text-align: center">

        <div class="col s6">
            <h4 style="text-align: center">Undevoured Burgers</h4>
            <ul style="list-style-type: none">
                {{#each burgers}}
                {{#unless this.devoured}}
                <li class="burgerlist" data-uid="{{id}}">
                    {{this.burger_name}} <button type="button" id="devour"
                        data-uid="{{id}}">Devour</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col s6">
            <h4 style="text-align: center">Devoured Burgers</h4>
            <ul>
                <ul style="list-style-type: none">
                    {{#each burgers}}
                    {{#if this.devoured}}
                    <li class="burgerlist" data-uid="{{id}}">
                        {{this.burger_name}} <button id="delete" data-uid="{{id}}"
                            class="fas fa-trash-alt">Remove</button>
                    </li>

                    {{/if}}
                    {{/each}}
                </ul>
            </ul>
        </div>
    </div>





</div>
